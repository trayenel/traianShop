<main>
  {{#if hasProduct}}<ul class="cart-list" style="display: block">{{#each
        product
      }}<li><p>{{this.products.title}}</p><p>{{this.cartEntries.qty}}</p><p
          >{{this.products.price}}</p>
          <form action="cart-delete-item" method="post">
            <input
              type="hidden"
              value="{{this.cartEntries.cartItemId}}"
              name="productCartId"
            />
            <button class="btn" type="submit">Delete</button></form>
        </li>{{/each}}</ul>
  {{else}} <p>No products</p>{{/if}}
</main>
